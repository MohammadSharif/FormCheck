<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Card_View"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        card_view:cardCornerRadius="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Card_Video_ImageView"
                android:layout_height="235dp"
                android:background="@android:color/black"
                android:layout_width="match_parent" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_below="@+id/Card_Video_ImageView">
                <ImageButton
                    android:id="@+id/Up_Arrow_Button"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/uparrow"
                    android:scaleType="fitCenter"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/Vote_Count"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="ii"
                    android:textSize="40sp"
                    android:layout_toRightOf="@id/Up_Arrow_Button"/>

                <ImageButton
                    android:id="@+id/Down_Arrow_Button"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/downarrow"
                    android:scaleType="fitCenter"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:layout_toRightOf="@id/Vote_Count" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
